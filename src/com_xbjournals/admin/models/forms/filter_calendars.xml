<?xml version="1.0" encoding="utf-8"?>
<!-- xbJournals admin/models/forms/filter_calendars.xml v0.1.1.1 12th July 2023 -->
<form>
	<fields name="filter" addfieldpath="administrator/components/com_xbjournals/models/fields">
		<field
			name="search"
			type="text"
			label="COM_CONTENT_FILTER_SEARCH_DESC"
			description="XBJOURNALS_SEARCH_ITEMS_DESC"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string"
		/>
		<field
			name="published"
			type="status"
			label="COM_CONTENT_FILTER_PUBLISHED"
			description="COM_CONTENT_FILTER_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
		<field
			name="category_id" type="xbitemcats"
			label="JOPTION_FILTER_CATEGORY"
			description="JOPTION_FILTER_CATEGORY_DESC"
			extension="com_xbjournals"
			itemtable="#__xbjournals_calendars"
			multiple="true"
			class="multipleCats"
			onchange="this.form.submit();"
			>
		</field>
		<!-- to add: server_id -->
	</fields>
	<fields name="list">
  		<field name="fullordering" type="hidden"  />
  		<!-- default="" -->
  		
		<field name="limit"
			type="limitbox"
			class="inputbox input-mini"
			default="5"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
